---
import LayoutHome from "../layouts/Layout_home.astro";
import Navbar from "../components/Navbar.astro";
---

<LayoutHome title="Home">
    <Navbar />
    <div class="flex h-screen bg-gray-100">
        <!-- Sidebar -->
        <div class="w-80 bg-slate-800 shadow-md p-6">
            <div class="mb-8">
                <h2 class="text-2xl font-semibold text-white">User Info</h2>
            </div>
            <nav class="space-y-6">
                <div class="flex flex-col items-center">
                    <div title="" class="rounded-full w-32 h-32 bg-blue-300 mb-4"></div>
                    <p class="text-white text-lg font-medium text-center break-words w-full" id="name_profile"></p>
                    <p class="text-red-600 hover:text-red-800 cursor-pointer text-lg font-medium text-center break-words w-full" id="close_sec">ðŸ’¢ Cerrar sesion</p>
                </div>
                <!-- Add more user info here as needed -->
            </nav>
        </div>
    
        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top bar if needed -->
            <header class="bg-white shadow-md">
                <div class="max-w-7xl mx-auto py-4 px-6">
                    <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
                </div>
            </header>
    
            <!-- Main content -->
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-pink-300">
                <div class="container mx-auto px-6 py-8">
                    <div class="flex justify-center items-center flex-col w-full min-h-screen bg-pink-300">
                        <h1 class="text-3xl font-bold text-white w-full flex justify-center">
                            Hello world! your name is: <span id="name-home" class="text-white text-2xl p-8"></span>
                        </h1>
                    </div>
                </div>
            </main>
        </div>
    </div>
</LayoutHome>

<script>
    document.querySelector("#name-home").textContent = "stiven";
</script>
