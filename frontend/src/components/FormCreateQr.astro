<div class="shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full max-w-md">
    <h2 class="text-xl font-bold mb-6 text-center text-white">Generar Código QR</h2>

    <form id="qrForm" class="space-y-4">
        <div>
            <label class="text-white block font-bold mb-2" for="url">URL</label>
            <input

                id="url"
                name="url"
                required
                class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
            />
        </div>
        <div>
            <label class="text-white block font-bold mb-2" for="nombre_qr"
                >Nombre del QR</label
            >
            <input
                type="text"
                id="nombre_qr"
                name="nombre_qr"
                required
                class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
            />
        </div>
        <div>
            <label class="text-white block font-bold mb-2" for="color"
                >Color del QR</label
            >
            <input
                type="color"
                id="color"
                name="color"
                value="#000000"
                class="block py-2.5 h-[5vh] px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
            />
        </div>
        <div>
            <label class="text-white block font-bold mb-2" for="tamano"
                >Tamaño del QR</label
            >
            <input
                type="number"
                id="tamano"
                name="tamano"
                value="300"
                min="100"
                max="500"
                class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
            />
        </div>
        <div class="flex items-center justify-between">
            <button
                type="submit"
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
            >
                Generar QR
            </button>
        </div>
    </form>

    <div id="resultMessage" class="mt-4 text-center hidden"></div>
</div>
